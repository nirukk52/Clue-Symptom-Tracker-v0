{
  "$schema": "onboarding-flow-schema.json",
  "_comment": "Onboarding Flow Q1-Q4 Configuration - 30 High-Value Widgets",
  "_design_principles": [
    "NO EMOJIS - Use icons from icon system",
    "Max 3 taps per Q3 screen",
    "Tap 1: Condition confirmation (attached to all widgets)",
    "Tap 2-3: The actual log widget",
    "Each widget generates immediate value for Screen 4"
  ],

  "q1": {
    "question": "What has been the hardest to manage lately?",
    "subtitle": "This helps us personalize your experience.",
    "options": [
      {
        "value": "fatigue",
        "label": "Fatigue that won't quit",
        "description": "Crashes, PEM, running on empty"
      },
      {
        "value": "flares",
        "label": "Unpredictable flares",
        "description": "Sudden bad days you can't plan for"
      },
      {
        "value": "migraines",
        "label": "Migraines that derail everything",
        "description": "Attacks that take you out"
      },
      {
        "value": "ibs_gut",
        "label": "IBS / Gut issues",
        "description": "Bloating, pain, unpredictable reactions"
      },
      {
        "value": "multiple",
        "label": "Multiple conditions",
        "description": "Everything overlaps, tracking is messy"
      },
      {
        "value": "other",
        "label": "Something else",
        "description": "Your main issue isn't listed"
      }
    ]
  },

  "q2": {
    "fatigue": {
      "question": "What do you hope to figure out about your fatigue?",
      "options": [
        {
          "value": "energy_envelope",
          "label": "When during the day am I most fatigued versus when I actually have energy"
        },
        {
          "value": "good_days_trap",
          "label": "Whether activities like exercise or outings are causing me to crash afterwards"
        },
        {
          "value": "brain_fog",
          "label": "Whether better sleep actually improves my energy and mental clarity"
        },
        {
          "value": "mood_connection",
          "label": "How my fatigue and mood are connected and affecting each other"
        },
        {
          "value": "no_focus",
          "label": "I want to track and see what patterns come up, no specific focus yet"
        }
      ]
    },
    "flares": {
      "question": "What do you want to understand about your flares?",
      "options": [
        {
          "value": "unknown_triggers",
          "label": "What might be triggering my flare-ups, because I genuinely have no idea"
        },
        {
          "value": "early_warning",
          "label": "Whether there are warning signs I could catch before a flare fully hits"
        },
        {
          "value": "treatment_effect",
          "label": "Whether my treatments or routines are actually reducing my flares"
        },
        {
          "value": "flare_patterns",
          "label": "Whether my flares follow any pattern like time of month or activity level"
        },
        {
          "value": "log_and_see",
          "label": "I want to log my flares and look for patterns over time, no specific theory"
        }
      ]
    },
    "migraines": {
      "question": "What would help you most with your migraines?",
      "options": [
        {
          "value": "food_triggers",
          "label": "Which foods or drinks might be triggering my migraines without me realizing"
        },
        {
          "value": "weather_triggers",
          "label": "Whether weather changes or barometric pressure correlate with my headaches"
        },
        {
          "value": "hormonal_link",
          "label": "Whether my migraines are linked to my hormonal cycle or specific times of month"
        },
        {
          "value": "stress_sleep",
          "label": "Whether stress or poor sleep are the real triggers setting off my migraines"
        },
        {
          "value": "find_any_pattern",
          "label": "I want to track everything and see what patterns emerge, no specific theory"
        }
      ]
    },
    "ibs_gut": {
      "question": "What would you like to understand about your digestive issues?",
      "options": [
        {
          "value": "food_culprits",
          "label": "Which specific foods might be causing my digestive flare-ups or reactions"
        },
        {
          "value": "stress_gut",
          "label": "Whether stress or anxiety is making my gut symptoms significantly worse"
        },
        {
          "value": "timing_patterns",
          "label": "What time of day my digestive issues are most intense and why"
        },
        {
          "value": "diet_working",
          "label": "Whether my current diet or medication is actually improving my symptoms"
        },
        {
          "value": "track_trends",
          "label": "I want to track everything and look for trends, no specific idea yet"
        }
      ]
    },
    "multiple": {
      "question": "What feels like the biggest challenge right now?",
      "options": [
        {
          "value": "symptom_overlap",
          "label": "Which condition is causing which symptom, because everything blurs together"
        },
        {
          "value": "competing_needs",
          "label": "How to juggle different medications or treatments that sometimes conflict"
        },
        {
          "value": "unified_view",
          "label": "Seeing all my symptoms in one combined view instead of scattered notes"
        },
        {
          "value": "prioritize_issue",
          "label": "Figuring out which issue to tackle first when everything feels urgent"
        },
        {
          "value": "reduce_overwhelm",
          "label": "Tracking everything I need to without getting completely overwhelmed"
        }
      ]
    },
    "other": {
      "question": "What would be most helpful to track?",
      "options": [
        {
          "value": "find_patterns",
          "label": "Finding patterns or triggers for symptoms that seem random right now"
        },
        {
          "value": "track_treatment",
          "label": "Tracking whether a new treatment or habit is actually making a difference"
        },
        {
          "value": "doctor_log",
          "label": "Having a log I can actually show my doctor instead of trying to remember"
        },
        {
          "value": "see_trends",
          "label": "Seeing overall trends in my health over weeks and months, not just day to day"
        },
        {
          "value": "just_curious",
          "label": "I want to try tracking and see what I learn, no specific goal yet"
        }
      ]
    }
  },

  "q3_widgets": {
    "_comment": "30 high-value widgets mapped to each Q2 option. Structure: condition_picker + main_widget",

    "energy_envelope": {
      "id": "w1_time_of_day_energy",
      "name": "Time-of-Day Energy Map",
      "condition_picker": {
        "question": "Is this about your fatigue?",
        "suggested": "fatigue",
        "alternatives": ["chronic_fatigue", "pem", "general_energy"]
      },
      "main_widget": {
        "type": "time_segment_selector",
        "question": "When do you have the most energy?",
        "segments": [
          {
            "value": "early_morning",
            "label": "Early morning",
            "time": "6-9am"
          },
          {
            "value": "late_morning",
            "label": "Late morning",
            "time": "9am-12pm"
          },
          { "value": "afternoon", "label": "Afternoon", "time": "12-5pm" },
          { "value": "evening", "label": "Evening", "time": "5-9pm" },
          { "value": "varies", "label": "It varies day to day", "time": null },
          { "value": "none", "label": "I rarely feel energized", "time": null }
        ],
        "allow_multiple": false
      },
      "captures": ["daily_energy_pattern", "peak_energy_time"],
      "q4_value": "We will learn your energy rhythm and predict your best windows"
    },

    "good_days_trap": {
      "id": "w2_activity_impact",
      "name": "Activity Impact Tracker",
      "condition_picker": {
        "question": "Is this about your fatigue crashes?",
        "suggested": "fatigue",
        "alternatives": ["pem", "chronic_fatigue", "post_exertional"]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "What did you do yesterday?",
          "options": [
            { "value": "exercise", "label": "Exercise or physical activity" },
            { "value": "social", "label": "Social outing or event" },
            { "value": "work", "label": "Full day of work" },
            { "value": "errands", "label": "Errands or chores" },
            { "value": "rest", "label": "Mostly rested" },
            { "value": "mixed", "label": "A mix of activity and rest" }
          ]
        },
        "part2": {
          "question": "How are you feeling today?",
          "options": [
            { "value": "crashed", "label": "Crashed or wiped out" },
            { "value": "struggling", "label": "Struggling but managing" },
            { "value": "okay", "label": "About the same as usual" },
            { "value": "good", "label": "Better than usual" }
          ]
        }
      },
      "captures": ["activity_crash_correlation", "pem_trigger_baseline"],
      "q4_value": "We will spot which activities cost more spoons than expected"
    },

    "brain_fog": {
      "id": "w3_sleep_clarity",
      "name": "Sleep-to-Clarity Check",
      "condition_picker": {
        "question": "Is this about your fatigue and brain fog?",
        "suggested": "fatigue",
        "alternatives": ["brain_fog", "cognitive_issues", "mental_clarity"]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "How did you sleep last night?",
          "options": [
            { "value": "poor", "label": "Poorly, woke up exhausted" },
            { "value": "broken", "label": "Broken sleep, kept waking" },
            { "value": "okay", "label": "Okay, nothing special" },
            { "value": "good", "label": "Good, feel somewhat rested" },
            { "value": "great", "label": "Great, feel refreshed" }
          ]
        },
        "part2": {
          "question": "How clear is your head right now?",
          "options": [
            { "value": "foggy", "label": "Very foggy, hard to think" },
            { "value": "hazy", "label": "Hazy, slower than usual" },
            { "value": "okay", "label": "Okay, functional" },
            { "value": "clear", "label": "Clear and focused" }
          ]
        }
      },
      "captures": [
        "sleep_quality",
        "cognitive_clarity",
        "sleep_fog_correlation"
      ],
      "q4_value": "We will track if sleep is the key to your clarity"
    },

    "mood_connection": {
      "id": "w4_energy_mood",
      "name": "Energy-Mood Snapshot",
      "condition_picker": {
        "question": "Is this about your fatigue?",
        "suggested": "fatigue",
        "alternatives": ["mood_disorder", "depression", "anxiety"]
      },
      "main_widget": {
        "type": "dual_slider",
        "part1": {
          "question": "Where is your energy right now?",
          "type": "gradient_slider",
          "min_label": "Empty",
          "max_label": "Full",
          "gradient": ["#f87171", "#fcd34d", "#b8e3d6"]
        },
        "part2": {
          "question": "How is your mood?",
          "type": "gradient_slider",
          "min_label": "Low",
          "max_label": "Good",
          "gradient": ["#a4c8d8", "#d0bdf4", "#b8e3d6"]
        }
      },
      "captures": ["energy_level", "mood_level", "energy_mood_correlation"],
      "q4_value": "We will reveal the fatigue-mood loop in your data"
    },

    "no_focus": {
      "id": "w5_open_baseline",
      "name": "Open Baseline",
      "condition_picker": {
        "question": "Is this about your fatigue?",
        "suggested": "fatigue",
        "alternatives": ["general_health", "chronic_illness", "undiagnosed"]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "Where is your energy right now?",
          "type": "gradient_slider",
          "min_label": "Empty",
          "max_label": "Full",
          "gradient": ["#f87171", "#fcd34d", "#b8e3d6"]
        },
        "part2": {
          "question": "What is bothering you most today?",
          "options": [
            { "value": "fatigue", "label": "Fatigue or exhaustion" },
            { "value": "pain", "label": "Pain or discomfort" },
            { "value": "brain_fog", "label": "Brain fog or concentration" },
            { "value": "mood", "label": "Mood or motivation" },
            { "value": "sleep", "label": "Sleep issues" },
            { "value": "other", "label": "Something else" }
          ]
        }
      },
      "captures": ["energy_baseline", "primary_symptom_today"],
      "q4_value": "We will start noticing what you might have missed"
    },

    "unknown_triggers": {
      "id": "w6_yesterdays_suspects",
      "name": "Yesterday's Suspects",
      "condition_picker": {
        "question": "Is this about your flares?",
        "suggested": "flares",
        "alternatives": ["fibromyalgia", "autoimmune", "chronic_pain"]
      },
      "main_widget": {
        "type": "multi_select_chips",
        "question": "What happened in the last 24-48 hours?",
        "instruction": "Select all that apply",
        "options": [
          { "value": "poor_sleep", "label": "Poor sleep" },
          { "value": "stress", "label": "High stress" },
          { "value": "activity", "label": "More activity than usual" },
          { "value": "food", "label": "Something I ate" },
          { "value": "weather", "label": "Weather change" },
          { "value": "hormones", "label": "Hormonal shift" },
          { "value": "nothing", "label": "Nothing stands out" }
        ],
        "allow_multiple": true
      },
      "captures": ["potential_triggers", "trigger_inventory"],
      "q4_value": "We will build your trigger suspect list and test each one"
    },

    "early_warning": {
      "id": "w7_warning_signs",
      "name": "Current Warning Signs",
      "condition_picker": {
        "question": "Is this about your flares?",
        "suggested": "flares",
        "alternatives": ["autoimmune", "fibromyalgia", "chronic_pain"]
      },
      "main_widget": {
        "type": "multi_select_chips",
        "question": "Have you noticed any of these recently?",
        "instruction": "These can be early warning signs",
        "options": [
          { "value": "fatigue", "label": "Unusual fatigue" },
          { "value": "sleep", "label": "Sleep changes" },
          { "value": "mood", "label": "Mood shift" },
          { "value": "aches", "label": "Diffuse aches" },
          { "value": "sensitivity", "label": "Increased sensitivity" },
          { "value": "appetite", "label": "Appetite changes" },
          { "value": "none", "label": "None of these" }
        ],
        "allow_multiple": true
      },
      "captures": ["prodrome_symptoms", "early_warning_baseline"],
      "q4_value": "We will learn your body's early alarm system"
    },

    "treatment_effect": {
      "id": "w8_treatment_checkin",
      "name": "Treatment Check-in",
      "condition_picker": {
        "question": "Is this about your flares?",
        "suggested": "flares",
        "alternatives": ["chronic_pain", "autoimmune", "fibromyalgia"]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "How has your treatment been this week?",
          "options": [
            { "value": "consistent", "label": "Took everything as planned" },
            { "value": "mostly", "label": "Mostly consistent" },
            {
              "value": "some_missed",
              "label": "Missed some doses or sessions"
            },
            { "value": "inconsistent", "label": "Very inconsistent" }
          ]
        },
        "part2": {
          "question": "How intense are your flares right now?",
          "type": "gradient_slider",
          "min_label": "Mild",
          "max_label": "Severe",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        }
      },
      "captures": [
        "treatment_adherence",
        "flare_intensity",
        "treatment_flare_correlation"
      ],
      "q4_value": "We will measure if your treatment is actually working"
    },

    "flare_patterns": {
      "id": "w9_flare_timeline",
      "name": "Flare Timeline",
      "condition_picker": {
        "question": "Is this about your flares?",
        "suggested": "flares",
        "alternatives": ["autoimmune", "fibromyalgia", "chronic_pain"]
      },
      "main_widget": {
        "type": "timeline_selector",
        "question": "When did your current or last flare start?",
        "options": [
          { "value": "now", "label": "In one right now" },
          { "value": "today", "label": "Started today" },
          { "value": "yesterday", "label": "Started yesterday" },
          { "value": "few_days", "label": "A few days ago" },
          { "value": "week", "label": "About a week ago" },
          { "value": "none_recent", "label": "Have not had one recently" }
        ],
        "follow_up": {
          "question": "Is this connected to your cycle?",
          "options": [
            { "value": "yes", "label": "Yes, seems related" },
            { "value": "maybe", "label": "Maybe" },
            { "value": "no", "label": "No" },
            { "value": "na", "label": "Does not apply to me" }
          ]
        }
      },
      "captures": ["flare_recency", "flare_duration", "cycle_correlation"],
      "q4_value": "We will find the hidden rhythm in your flares"
    },

    "log_and_see": {
      "id": "w10_flare_snapshot",
      "name": "Flare Snapshot",
      "condition_picker": {
        "question": "Is this about your flares?",
        "suggested": "flares",
        "alternatives": ["chronic_pain", "autoimmune", "fibromyalgia"]
      },
      "main_widget": {
        "type": "triple_selector",
        "part1": {
          "question": "Current flare intensity",
          "type": "gradient_slider",
          "min_label": "None",
          "max_label": "Severe",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        },
        "part2": {
          "question": "Main symptom",
          "options": [
            { "value": "pain", "label": "Pain" },
            { "value": "fatigue", "label": "Fatigue" },
            { "value": "inflammation", "label": "Inflammation or swelling" },
            { "value": "stiffness", "label": "Stiffness" },
            { "value": "other", "label": "Other" }
          ]
        },
        "part3": {
          "question": "Where do you feel it most?",
          "options": [
            { "value": "joints", "label": "Joints" },
            { "value": "muscles", "label": "Muscles" },
            { "value": "whole_body", "label": "Whole body" },
            { "value": "specific", "label": "Specific area" }
          ]
        }
      },
      "captures": ["flare_intensity", "flare_symptom", "flare_location"],
      "q4_value": "We will start connecting dots you could not see before"
    },

    "food_triggers": {
      "id": "w11_recent_intake",
      "name": "Recent Intake Review",
      "condition_picker": {
        "question": "Is this about your migraines?",
        "suggested": "migraines",
        "alternatives": ["headaches", "cluster_headaches", "tension_headaches"]
      },
      "main_widget": {
        "type": "multi_select_chips",
        "question": "What have you had in the last 24 hours?",
        "instruction": "Select common triggers you have consumed",
        "options": [
          { "value": "caffeine", "label": "Coffee or caffeine" },
          { "value": "alcohol", "label": "Alcohol" },
          { "value": "chocolate", "label": "Chocolate" },
          { "value": "aged_cheese", "label": "Aged cheese" },
          { "value": "processed", "label": "Processed meats" },
          { "value": "msg", "label": "MSG or artificial sweeteners" },
          { "value": "citrus", "label": "Citrus fruits" },
          { "value": "none", "label": "None of these" }
        ],
        "allow_multiple": true
      },
      "captures": ["recent_food_intake", "potential_food_triggers"],
      "q4_value": "We will identify your personal food triggers"
    },

    "weather_triggers": {
      "id": "w12_weather_sensitivity",
      "name": "Weather Sensitivity Check",
      "condition_picker": {
        "question": "Is this about your migraines?",
        "suggested": "migraines",
        "alternatives": [
          "headaches",
          "barometric_sensitivity",
          "weather_sensitivity"
        ]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "How is the weather today?",
          "options": [
            { "value": "stable", "label": "Stable, no big changes" },
            { "value": "storm_coming", "label": "Storm or rain coming" },
            {
              "value": "pressure_drop",
              "label": "Pressure feels like it dropped"
            },
            {
              "value": "pressure_rise",
              "label": "Pressure rising, clearing up"
            },
            { "value": "hot", "label": "Very hot or humid" },
            { "value": "cold", "label": "Very cold" }
          ]
        },
        "part2": {
          "question": "How is your head right now?",
          "type": "gradient_slider",
          "min_label": "Fine",
          "max_label": "Bad headache",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        }
      },
      "captures": [
        "weather_conditions",
        "headache_status",
        "weather_headache_correlation"
      ],
      "q4_value": "We will track barometric pressure against your headaches"
    },

    "hormonal_link": {
      "id": "w13_cycle_position",
      "name": "Cycle Position Check",
      "condition_picker": {
        "question": "Is this about your migraines?",
        "suggested": "migraines",
        "alternatives": [
          "menstrual_migraines",
          "hormonal_headaches",
          "headaches"
        ]
      },
      "main_widget": {
        "type": "dual_selector",
        "part1": {
          "question": "Where are you in your cycle?",
          "options": [
            { "value": "period", "label": "On my period" },
            { "value": "before", "label": "A few days before" },
            { "value": "ovulation", "label": "Around ovulation" },
            { "value": "luteal", "label": "Luteal phase (after ovulation)" },
            { "value": "unsure", "label": "Not sure" },
            { "value": "na", "label": "Does not apply to me" }
          ]
        },
        "part2": {
          "question": "How is your head right now?",
          "type": "gradient_slider",
          "min_label": "Fine",
          "max_label": "Bad headache",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        }
      },
      "captures": [
        "cycle_phase",
        "headache_status",
        "hormonal_migraine_correlation"
      ],
      "q4_value": "We will map your migraines to your cycle"
    },

    "stress_sleep": {
      "id": "w14_stress_sleep_triangle",
      "name": "Stress-Sleep-Migraine Triangle",
      "condition_picker": {
        "question": "Is this about your migraines?",
        "suggested": "migraines",
        "alternatives": ["tension_headaches", "stress_headaches", "headaches"]
      },
      "main_widget": {
        "type": "triple_selector",
        "part1": {
          "question": "How did you sleep last night?",
          "options": [
            { "value": "poor", "label": "Poorly" },
            { "value": "okay", "label": "Okay" },
            { "value": "good", "label": "Good" }
          ]
        },
        "part2": {
          "question": "How stressed are you?",
          "options": [
            { "value": "high", "label": "High stress" },
            { "value": "moderate", "label": "Moderate" },
            { "value": "low", "label": "Low stress" }
          ]
        },
        "part3": {
          "question": "How is your head?",
          "type": "gradient_slider",
          "min_label": "Fine",
          "max_label": "Bad",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        }
      },
      "captures": ["sleep_quality", "stress_level", "headache_status"],
      "q4_value": "We will untangle stress vs sleep as your trigger"
    },

    "find_any_pattern": {
      "id": "w15_migraine_snapshot",
      "name": "Migraine Snapshot",
      "condition_picker": {
        "question": "Is this about your migraines?",
        "suggested": "migraines",
        "alternatives": ["headaches", "cluster_headaches", "chronic_headaches"]
      },
      "main_widget": {
        "type": "quad_selector",
        "part1": {
          "question": "Headache intensity",
          "type": "gradient_slider",
          "min_label": "None",
          "max_label": "Severe",
          "gradient": ["#b8e3d6", "#fcd34d", "#f87171"]
        },
        "part2": {
          "question": "Location",
          "options": [
            { "value": "one_side", "label": "One side" },
